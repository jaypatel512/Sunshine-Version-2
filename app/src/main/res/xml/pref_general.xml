<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference android:key="@string/pref_location_key"
        android:title="@string/pref_location_title"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"
        />

    <ListPreference
        android:key="@string/pref_temperature_unit_key"
        android:title="@string/pref_temperature_unit_title"
        android:defaultValue="@string/pref_temperature_unit_default"
        android:entryValues="@array/pref_units_values"
        android:entries="@array/pref_units_options"
        />


</PreferenceScreen>
